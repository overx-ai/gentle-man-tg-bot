# gentle-man-tg-bot Configuration
# Copy this file to .env and fill in your values

# Required Settings
TELEGRAM_BOT_TOKEN=your_bot_token_here
DATABASE_URL=postgresql://user:password@localhost:5432/gentle_man_tg_bot

# OpenRouter AI Integration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=google/gemini-2.0-flash-001



# Bot Metadata
BOT_NAME=gentle-man-tg-bot
BOT_DESCRIPTION=A Telegram bot built with the telegram-bot-template framework
BOT_VERSION=0.1.0

# Localization Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ru,es

# Logging Configuration
LOG_LEVEL=INFO

# Development Settings
# DEBUG=true

# Python path for src layout
PYTHONPATH=src